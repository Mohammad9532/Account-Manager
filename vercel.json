{
    "version": 2,
    "_comment": "Triggering fresh build with Root Directory fix",
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "functions": {
        "server/index.js": {
            "includeFiles": "server/models/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/index.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}